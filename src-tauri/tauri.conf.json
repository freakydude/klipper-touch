{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "klipper-touch",
        "minWidth": 480,
        "minHeight": 320, 
        "dragDropEnabled": false
      }
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build",
    "removeUnusedCommands": true
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "externalBin": [],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "klipper-touch",
    "targets": ["deb", "msi", "nsis", "dmg"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "createUpdaterArtifacts": false
  },
  "identifier": "de.freakydu.klipper-touch",
  "plugins": {
    "cli": {
      "args": [
        {
          "description": "Moonraker HTTP API URL (e.g.: -m http://<moonraker-ip>)",
          "short": "m",
          "multiple": false,
          "name": "moonrakerapi",
          "required": false,
          "takesValue": true
        },
        {
          "description": "Moonraker Websocket URL (e.g.: -w ws://<moonraker-ip>/websocket)",
          "short": "w",
          "multiple": false,
          "name": "moonrakerws",
          "required": false,
          "takesValue": true
        },
        {
          "description": "Fullscreen mode (e.g.: --fullscreen or -f)",
          "short": "f",
          "multiple": false,
          "name": "fullscreen",
          "required": false,
          "takesValue": false
        }
      ],
      "description": "Klipper-Touch is an alternative, web-based user interface for Klipper3D/Moonraker, designed for use with small touch screens that do not have a keyboard or mouse."
    }
  },
  "productName": "klipper-touch",
  "version": "0.1.0"
}
